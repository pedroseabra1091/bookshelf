<div class='flex'>
	<table class="mx-auto">
		<tbody>
			<% @books.each do |book| %>
				<tr id='<%= "#{dom_id(book)}_row" %>' class='<%= cycle('bg-violet-50', 'bg-white') %> shadow'>
					<td class='px-2 py-3'>
						<%= image_tag(book.cover_url, class: 'w-40') %>
					</td>
					<td>
						<%= link_to(book_path(book)) do %>
							<h1 class='text-xl font-bold mb-3 hover:underline'><%= book.title %></h1>
						<% end %>
						<p class="max-w-xl"><%= truncate(book.description, length: 200) %></p>
					</td>
					<td class="px-4">
						<ul>
							<li>
								<%= link_to('Edit', edit_book_path(book), class: 'hover:underline') %>
							</li>
						</ul>
					</td>
				</tr>
			<% end %>
		</tbody>
		<tfoot>
			<td>
				<div class="my-8">
					<%= link_to('New book',new_book_path,
												class: 'inline rounded-lg py-3 px-5 bg-green-600 text-white block font-medium') %>
				</div>
			</td>
		</tfoot>
	</table>
</div>