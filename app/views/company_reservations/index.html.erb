<%= turbo_frame_tag('company_reservations') do %>
  <div class="bg-violet-50 shadow h-fit p-8">
    <h2 class='font-bold mb-2 text-xl'>Company reading list</h2>
    <% @active_company_reservations&.each do |reservation| %>
      <div class="bg-white shadow h-fit p-4 my-4 rounded">
        <%= link_to(book_path(reservation.book), 'data-turbo-frame': '_top') do %>
          <h1 class='text-xl font-bold hover:underline'><%= reservation.book.title %></h1>
        <% end %>
        <div class='flex items-center mt-2'>
          <%= image_tag('arrow-down.svg', class: 'pr-1') %>
          <span>Reserved by <%= reservation.user.full_name %> on <%= reservation.created_at.to_date %></span>
        </div>
      </div>
    <% end %>
  </div>
<% end %>