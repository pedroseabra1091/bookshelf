 <% if user_signed_in? %>
  <nav class="container mx-auto mt-8 px-5 flex items-center">
    <%= link_to(books_path) do %>
      <h1 class='font-bold text-2xl'>Bookshelf</h1>
    <% end %>
    <div class='w-full flex gap-x-4 justify-end'>
      <%= link_to(reservations_path) do %>
        <%= image_tag('bookmark.svg') %>
      <% end %>
      <div class='flex'>
        <%= image_tag('user.svg', class: 'pr-1') %>
        <span><%= current_user.first_name %></span>
      </div>
      <%= link_to(destroy_user_session_path, data: { "turbo-method": :delete }) do %>
        <%= image_tag('log-out.svg') %>
      <% end %>
    </div>
  </nav>
<% end %>